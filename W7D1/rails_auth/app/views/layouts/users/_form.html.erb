<!--Set variables for form attributes-->
<% action = (user.persisted? ? user_url(user) : user_url) %>
<% message = (user.persisted? ? "Update User" : "Create User") %>

<form action="<%= action %>%" method = "POST">
  
  <!--if the action is edit, switches http method to PATCH-->
  <% if user.persisted? %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <!--The actual Create/Edit user form inputs-->
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
  <label for="user_username">Username:</label>
  <input type="text" name="user[username]" id="user_username">
  <br>
  <label for="user_password">Password:</label>
  <input type="text" name="user[password]" id="user_password">
  <br>
  <input type="submit" value="<%= message %>">


</form>